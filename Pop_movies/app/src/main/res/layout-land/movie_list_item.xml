<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_equipment_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_list"
    android:padding="8dp">

    <ImageView
        android:id="@+id/image_movie_picture"
        android:transitionName="@string/transition_image"
        android:layout_width="105dp"
        android:layout_height="122dp"
        android:scaleType="fitCenter"
        android:src="@drawable/placeholder"
        android:contentDescription="@string/image_list_item_description"/>

    <TextView
        android:id="@+id/text_view_movie_title_list_item_label"
        style="@style/text_movie_list_item_title"
        android:layout_toEndOf="@+id/divider"
        android:text="@string/label_movie_title_list_item" />

    <TextView
        android:id="@+id/text_view_movie_title_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/divider"
        tools:text="@string/detail_movie_title_content"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/text_view_movie_release_date_list_item_label"
        style="@style/text_movie_list_item_release_date"
        android:layout_toEndOf="@+id/divider"
        android:layout_below="@+id/text_view_movie_title_list_item"
        android:text="@string/label_movie_release_date_list_item" />

    <TextView
        android:id="@+id/text_view_movie_release_date_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_movie_title_list_item"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/divider"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16dp"
        tools:text="@string/detail_release_date_content" />

    <View
        android:id="@+id/divider"
        android:layout_toEndOf="@+id/image_movie_picture"
        style="@style/dividerVerticalListItem" />

    <View
        android:id="@+id/view_list_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/divider"
        android:background="@color/colorPrimary"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"/>

</RelativeLayout>